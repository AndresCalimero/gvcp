{{>_header}}
<header class="roomHeader">
    <span id="title"></span>
    <span id="subTitle"></span>
</header>
<div class="container-main">
    <nav class="leftMenu">
        <div id="usersContainer"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <span class="glyphicon glyphicon-comment"></span> <b>Chat</b>
                        </div>
                        <div class="panel-body">
                            <ul id="chat-list" class="chat">
                            </ul>
                        </div>
                        <div class="panel-footer">
                            <div class="input-group">
                                <input id="btn-input" type="text" class="form-control" placeholder="Type your message here..." />
                                <span class="input-group-btn">
                            <button class="btn btn-warning" id="btn-chat">
                                Send</button></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <section class="videosContainer">
        <div class="localVideoContainer">
            <video id="localVideo" oncontextmenu="return false;"></video>
        </div>
        <div id="remotes"></div>
    </section>
</div>
<script src="//simplewebrtc.com/latest.js"></script>
<script src="/js/app.min.js"></script>
</body>

</html>